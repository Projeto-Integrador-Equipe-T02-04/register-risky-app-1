<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="#F5F5F5"
    android:gravity="center_vertical">

    <!-- Cabeçalho com ícone e título -->
    <ImageView
        android:id="@+id/loginIcon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:src="@drawable/logo_puc"
        android:contentDescription="Imagem de Login" />

    <TextView
        android:id="@+id/loginTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bem-vindo ao PUC Safe"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#212121"
        android:layout_gravity="center"
        android:layout_marginBottom="32dp" />

    <!-- Campo de Email -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/emailInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:boxBackgroundMode="outline"
        app:boxStrokeColor="#1976D2"
        app:hintTextColor="#1976D2">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/RFInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Registro de Funcionário"
            android:textColor="#212121"
            android:backgroundTint="#E0E0E0"
            android:padding="12dp" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Campo de Senha -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/passwordInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        app:boxBackgroundMode="outline"
        app:boxStrokeColor="#1976D2"
        app:hintTextColor="#1976D2"
        app:passwordToggleEnabled="true">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/passwordInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Senha"
            android:inputType="textPassword"
            android:textColor="#212121"
            android:backgroundTint="#E0E0E0"
            android:padding="12dp" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Botão de Login -->
    <Button
        android:id="@+id/loginButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Entrar"
        android:textSize="16sp"
        android:textAllCaps="false"
        android:backgroundTint="#1976D2"
        android:textColor="#FFFFFF"
        android:padding="12dp"
        android:elevation="4dp"
        android:layout_marginBottom="16dp" />

</LinearLayout>
